# Chat4All v2 - Environment Variables Template
# Copy this file to .env and fill with actual secrets
# NEVER commit .env file to Git

# ============================================================================
# INFRASTRUCTURE SECRETS
# ============================================================================

# PostgreSQL Database
POSTGRES_DB=chat4all
POSTGRES_USER=chat4all
POSTGRES_PASSWORD=change_me_in_production_use_openssl_rand_base64_32

# MongoDB Database
MONGO_INITDB_ROOT_USERNAME=chat4all
MONGO_INITDB_ROOT_PASSWORD=change_me_in_production_use_openssl_rand_base64_32
MONGO_INITDB_DATABASE=chat4all

# Redis Cache
REDIS_PASSWORD=change_me_in_production_use_openssl_rand_base64_32

# MinIO Object Storage (S3-compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_in_production_use_openssl_rand_base64_32

# ============================================================================
# EXTERNAL PLATFORM CREDENTIALS
# ============================================================================

# WhatsApp Business API Connector
# Get these from Meta Business Manager: https://business.facebook.com/
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=generate_random_token_with_uuidgen
WHATSAPP_API_URL=https://graph.facebook.com/v18.0

# Telegram Bot Connector
# Get token from BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890
TELEGRAM_WEBHOOK_SECRET=generate_random_secret_with_openssl_rand_hex_32
TELEGRAM_API_URL=https://api.telegram.org

# Instagram Messaging Connector
# Get these from Meta for Developers: https://developers.facebook.com/
INSTAGRAM_ACCESS_TOKEN=your_long_lived_instagram_access_token_here
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_VERIFY_TOKEN=generate_random_token_with_uuidgen
INSTAGRAM_API_URL=https://graph.facebook.com/v18.0

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# OAuth2 / JWT Configuration
# For Keycloak or other OAuth2 provider
OAUTH2_ISSUER_URI=http://localhost:8090/realms/chat4all
OAUTH2_JWK_SET_URI=http://localhost:8090/realms/chat4all/protocol/openid-connect/certs
OAUTH2_CLIENT_ID=chat4all-client
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret_here

# JWT Signing Key (for internal token generation if needed)
# Generate with: openssl rand -hex 32
JWT_SIGNING_KEY=generate_256_bit_hex_key_with_openssl_rand_hex_32

# ============================================================================
# OBSERVABILITY & MONITORING
# ============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_in_production_use_strong_password

# Prometheus Basic Auth (optional)
PROMETHEUS_BASIC_AUTH_USER=prometheus
PROMETHEUS_BASIC_AUTH_PASSWORD=change_me_if_enabling_basic_auth

# Jaeger Configuration (optional)
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CHAT4ALL=DEBUG

# Server Ports (internal - usually don't need to change)
API_GATEWAY_PORT=8080
MESSAGE_SERVICE_PORT=8081
USER_SERVICE_PORT=8083
FILE_SERVICE_PORT=8084
WHATSAPP_CONNECTOR_PORT=8085
TELEGRAM_CONNECTOR_PORT=8086
INSTAGRAM_CONNECTOR_PORT=8087

# ============================================================================
# RATE LIMITING & PERFORMANCE
# ============================================================================

# Rate Limiting (requests per minute per user)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=150

# File Upload Limits
MAX_FILE_SIZE=2GB
MAX_REQUEST_SIZE=2GB

# ============================================================================
# DEVELOPMENT ONLY (Remove in production)
# ============================================================================

# Debug Mode (set to false in production)
DEBUG=false

# Hot Reload (set to false in production)
SPRING_DEVTOOLS_RESTART_ENABLED=false

# ============================================================================
# NOTES
# ============================================================================
#
# 1. NEVER commit .env file to Git
# 2. Use strong, unique passwords for production (minimum 32 characters)
# 3. Rotate secrets regularly (see docs/security/secrets-management.md)
# 4. Generate strong passwords with: openssl rand -base64 32
# 5. Generate JWT keys with: openssl rand -hex 32
# 6. Generate UUIDs with: uuidgen | tr '[:upper:]' '[:lower:]'
#
# For detailed documentation, see: docs/security/secrets-management.md
